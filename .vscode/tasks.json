{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Run Tests",
            "command": "source",
            "args": [
                "${workspaceFolder}/epenv/bin/activate",
                "&&",
                "coverage",
                "run",
                "-m",
                "unittest",
                "discover",
                "${fileDirname}/tests",
                "&&",
                "coverage",
                "report",
                "-m",
                "&&",
                "coverage",
                "erase",
                "&&",
                "deactivate"
            ],
            "type": "shell",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}